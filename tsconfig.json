{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": "source",
		"outDir": "output",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [ "ES2021" ],
	},
	"include": [
		"./source/**/*.ts"
	],
}
